<idea-plugin>
    <id>com.maple.plugs</id>
    <name>ToStruct</name>
    <version>1.0</version>
    <vendor email="maple_20@qq.com">maple</vendor>

    <description><![CDATA[
        toStruct
        将JavaBean转换为对象描述的json结构
        例如：
        Student {

            ApiModelProperty("学生姓名")
            private String name;

            ApiModelProperty("学号")
            private Long id;

        }

        result:

        {
        "type":"object",

        "property":
            {
                "name":
                {
                    "type":"string"
                },
                "id":
                {
                    "type":"long"
                }
            }
        }
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <!--<depends>com.alibaba.fastjson</depends>-->
    <!--<depends>com.intellij.modules.java</depends>-->


    <extensions defaultExtensionNs="com.intellij">(

        <notificationGroup id="com.maple.plugs.action.MapleToStruct"
                           displayType="BALLOON"
                           key="com.maple.plugs.action.MapleToStruct"/>
    </extensions>


    <actions>
        <!-- Add your actions here -->
        <action id="toStruct" class="com.maple.plugs.action.MapleToStruct" text="ToStruct" description="To转换为结构化json数据">
            <add-to-group group-id="Copy.Paste.Special" anchor="last"/>
        </action>
    </actions>


</idea-plugin>